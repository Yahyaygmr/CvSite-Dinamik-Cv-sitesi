@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
    {
        <br />
        @Html.Label("Deneyim Başlığı")
        @Html.TextBoxFor(x=>x.ExperienceTitle, new {@class = "form-control"})
        <br />
        @Html.Label("Firma")
        @Html.TextBoxFor(x=>x.ExperienceSubTitle, new {@class = "form-control"})
        <br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x=>x.ExperienceDate, new {@class = "form-control"})
        <br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x=>x.ExperienceDescription,10,3, new {@class = "form-control"})
        <br />
        <button class="btn btn-success">Kaydet</button>
        <button type="reset" class="btn btn-danger">İptal</button>
    }
</div>