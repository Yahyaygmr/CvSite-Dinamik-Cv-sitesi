@model EntityLayer.Concrete.Hobby
@{
    ViewData["Title"] = "EditHobby";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    @using (Html.BeginForm("EditHobby", "Hobby", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.HobbyId)
        <br />
        @Html.Label("Hobi")
        @Html.TextAreaFor(x=>x.HobbyDescription,10,3, new {@class = "form-control"})
        <br />
        <button class="btn btn-success">Kaydet</button>
        <button type="reset" class="btn btn-danger">İptal</button>
    }
</div>
