@model EntityLayer.Concrete.Certificate
@{
    ViewData["Title"] = "EditCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    @using (Html.BeginForm("EditCertificate", "Certificate", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.CertificateID)
        <br />
        @Html.Label("Sertifika")
        @Html.TextBoxFor(x=>x.CertificateName, new {@class = "form-control"})
        <br />
        @Html.Label("Url")
        @Html.TextBoxFor(x=>x.CertificateUrl, new {@class = "form-control"})
        <br />
        @Html.Label("Bölüm")
        @Html.TextBoxFor(x=>x.CertificateDate, new {@class = "form-control"})
        <br />
        <button class="btn btn-success">Kaydet</button>
        <button type="reset" class="btn btn-danger">İptal</button>
    }
</div>
